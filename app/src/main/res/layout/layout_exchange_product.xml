<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_deal_info_modify"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dp_50"
    android:layout_marginTop="@dimen/dp_10"
    android:background="@color/white"
    android:orientation="horizontal">


    <TextView
        android:id="@+id/tv_current_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="@dimen/dp_15"
        android:layout_weight="7.9"
        android:text="7.2890"
        android:textColor="@color/default_green"
        android:textSize="@dimen/fontSize_25sp" />


    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_weight="4.1"
        android:gravity="center_vertical">

        <TextView
            android:id="@+id/tv_change_percent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="-0.47%"
            android:textColor="@color/default_red"
            android:textSize="@dimen/fontSize_12sp" />


        <TextView
            android:id="@+id/tv_change_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@id/tv_change_percent"
            android:layout_below="@id/tv_change_percent"
            android:layout_marginTop="@dimen/dp_5"
            android:text="0.0033"
            android:textColor="@color/default_green"
            android:textSize="@dimen/fontSize_12sp" />
    </RelativeLayout>


    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginLeft="@dimen/dp_25"
        android:layout_weight="6.4"

        android:gravity="center_vertical">

        <TextView
            android:id="@+id/tv_high_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="最高 "
            android:textColor="@color/font_333"
            android:textSize="@dimen/dp_12" />

        <TextView
            android:id="@+id/tv_high_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_3"
            android:layout_toRightOf="@id/tv_high_text"
            android:text="7.3900"
            android:textColor="@color/default_red"
            android:textSize="@dimen/fontSize_12sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@id/tv_high_text"
            android:layout_below="@id/tv_high_text"
            android:layout_marginTop="@dimen/dp_5"
            android:text="最低 "
            android:textColor="@color/font_333"
            android:textSize="@dimen/dp_12" />

        <TextView
            android:id="@+id/tv_low_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@id/tv_high_price"
            android:layout_below="@id/tv_high_price"
            android:layout_marginTop="@dimen/dp_5"
            android:text="8.3120"
            android:textColor="@color/default_green"
            android:textSize="@dimen/fontSize_12sp" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_marginRight="@dimen/dp_15"
        android:layout_weight="6.4"
        android:gravity="center_vertical">

        <TextView
            android:id="@+id/tv_today_open"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="今开 "
            android:textColor="@color/font_333"
            android:textSize="@dimen/dp_12" />

        <TextView
            android:id="@+id/tv_today_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_3"
            android:layout_toRightOf="@id/tv_today_open"
            android:text="8.3600"
            android:textColor="@color/font_333"
            android:textSize="@dimen/fontSize_12sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@id/tv_today_open"
            android:layout_below="@id/tv_today_open"
            android:layout_marginTop="@dimen/dp_5"
            android:text="昨收 "
            android:textColor="@color/font_333"
            android:textSize="@dimen/dp_12" />

        <TextView
            android:id="@+id/tv_yesterday_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@id/tv_today_price"
            android:layout_below="@id/tv_today_price"
            android:layout_marginTop="@dimen/dp_5"
            android:text="5.3600"
            android:textColor="@color/font_333"
            android:textSize="@dimen/fontSize_12sp" />

    </RelativeLayout>


</LinearLayout>


